[Unit]
Description=DeepCool Digital Linux Driver
Documentation=https://github.com/Nortank12/deepcool-digital-linux
After=network.target

[Service]
Type=simple
ExecStart=/usr/sbin/deepcool-digital-linux
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
